<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPageGrid" alignment="center" hgap="10" prefHeight="365.0"
          prefWidth="675.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="controllers.MainPage">
    <Pane prefHeight="388.0" prefWidth="645.0">
        <ImageView fitHeight="46.0" fitWidth="109.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@../images/iBuyerLogo.png"/>
        </ImageView>
        <Hyperlink layoutX="619.0" layoutY="4.0" text="Log Out">
            <font>
                <Font size="10.0"/>
            </font>
        </Hyperlink>
        <TextField fx:id="txtSearch" layoutX="492.0" layoutY="26.0" promptText="Search"/>
        <ImageView fx:id="btnSearch" fitHeight="21.0" fitWidth="20.0" layoutX="641.0" layoutY="28.0"
                   onMouseClicked="#searchStock" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/search.png"/>
        </ImageView>
        <Line endX="578.0" layoutX="97.0" layoutY="63.0" startX="-100.0"/>
        <TableView fx:id="tvStockTable" layoutX="123.0" layoutY="83.0" onMouseClicked="#viewImage" prefHeight="236.0"
                   prefWidth="545.0">
        </TableView>
        <ListView fx:id="lvContents" layoutX="7.0" layoutY="83.0" onMouseClicked="#changeCategory" prefHeight="236.0"
                  prefWidth="109.0"/>
        <Label layoutX="228.0" layoutY="17.0" text="Stock Management">
            <font>
                <Font size="22.0"/>
            </font>
        </Label>
        <Button fx:id="btnAmendStock" layoutX="578.0" layoutY="326.0" mnemonicParsing="false" onAction="#amendStock"
                prefHeight="25.0" prefWidth="90.0" text="Amend Stock"/>
        <Label layoutX="215.0" layoutY="65.0" text="Double click a product to view it's image"/>
        <Button layoutX="476.0" layoutY="326.0" mnemonicParsing="false" prefWidth="90.0" text="Export"/>
    </Pane>
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity"
                           percentWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
