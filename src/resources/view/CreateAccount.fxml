<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="createAccountGrid" alignment="center" hgap="10" prefHeight="448.0"
          prefWidth="411.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="controllers.CreateAccount">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity"
                           percentWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <Pane prefHeight="451.0" prefWidth="411.0">
        <ImageView fitHeight="65.0" fitWidth="200.0" layoutX="112.0" layoutY="14.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@../images/iBuyerLogo.png"/>
        </ImageView>
        <Label layoutX="162.0" layoutY="79.0" text="Create Account">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <Button fx:id="btnSubmit" layoutX="284.0" layoutY="409.0" mnemonicParsing="false" onAction="#createAccount"
                prefHeight="25.0" prefWidth="95.0" text="Submit"/>
        <Button fx:id="btnBack" layoutX="32.0" layoutY="409.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="95.0" text="Back"/>
        <TextField fx:id="txtUsername" layoutX="33.0" layoutY="109.0" prefHeight="25.0" prefWidth="345.0"
                   promptText="Username"/>
        <TextField fx:id="txtPassword" accessibleRole="PASSWORD_FIELD" layoutX="35.0" layoutY="184.0" prefHeight="25.0"
                   prefWidth="159.0" promptText="Password"/>
        <TextField fx:id="txtConfirmPassword" accessibleRole="PASSWORD_FIELD" layoutX="217.0" layoutY="184.0"
                   prefHeight="25.0" prefWidth="159.0" promptText="Confirm Password"/>
        <Label layoutX="68.0" layoutY="159.0"
               text="You can use letters, numbers and the following symbols: '_','-','.'">
            <font>
                <Font size="10.0"/>
            </font>
        </Label>
        <Label fx:id="lblUsernameReq" layoutX="131.0" layoutY="149.0" text="Use between 8 and 64 characters">
            <font>
                <Font size="10.0"/>
            </font>
        </Label>
        <Label layoutX="121.0" layoutY="224.0" text="Use between 8 and 64 characters with">
            <font>
                <Font size="10.0"/>
            </font>
        </Label>
        <Label layoutX="126.0" layoutY="234.0" text="a mix of letters, numbers &amp; symbols">
            <font>
                <Font size="10.0"/>
            </font>
        </Label>
        <Label layoutX="32.0" layoutY="298.0" text="What is your mother's maiden name?"/>
        <TextField fx:id="txtAnswer1" layoutX="238.0" layoutY="294.0" prefHeight="25.0" prefWidth="140.0"
                   promptText="Answer"/>
        <Label layoutX="33.0" layoutY="338.0" text="What was the name of your first pet?"/>
        <TextField fx:id="txtAnswer2" layoutX="238.0" layoutY="334.0" prefHeight="25.0" prefWidth="140.0"
                   promptText="Answer"/>
        <TextField fx:id="txtAnswer3" layoutX="238.0" layoutY="368.0" prefHeight="25.0" prefWidth="140.0"
                   promptText="Answer"/>
        <Label layoutX="58.0" layoutY="372.0" text="In what city were you born?"/>
        <ChoiceBox fx:id="cbAccessLevel" layoutX="238.0" layoutY="254.0" prefHeight="25.0" prefWidth="140.0"/>
        <Label layoutX="67.0" layoutY="258.0" text="Access Level Required:"/>
        <Label layoutX="150.0" layoutY="136.0" text="Username is already taken" textFill="RED">
            <font>
                <Font size="10.0"/>
            </font>
        </Label>
        <Label layoutX="169.0" layoutY="136.0" text="Enter a Username" textFill="RED">
            <font>
                <Font size="10.0"/>
            </font>
        </Label>
    </Pane>
</GridPane>
